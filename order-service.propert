spring:
  application:
    name: order-service

server:
  port: 8081

eureka:
  client:
    service-url:
      defaultZone: http://localhost:8761/eureka/ # URL of the Eureka server that this service will register with

resilience4j:
  circuitbreaker:
    configs:
      default:
        slidingWindowSize: 10  # Number of calls in a window
        slidingWindowType: COUNT_BASED
        failureRateThreshold: 50  # Circuit opens when 50% calls fail
        waitDurationInOpenState: 10s  # Time before retry after circuit opens
        permittedNumberOfCallsInHalfOpenState: 3  # Test calls before fully closing
    instances:
      productService:
        base-config: default

management:
  endpoints:
    web:
      exposure:
        include: resilience4j-circuitbreakers, health, metrics

logging:
  level:
    feign: DEBUG
    '[io.github.resilience4j]': DEBUG

